/*
Link      :  https://codeforces.com/problemset/problem/214/A


Approach  :


 
*/
#include<bits/stdc++.h>
using namespace std;
 
 
int main(){
   int m,n;
   cin>>n>>m;
   if(n>m) swap(n,m);
   int sum=0;

   for(int i=0;i<=n;i++){
   	   int b=n-(i*i);
   	  
   	   if((i+(b*b))==m && b>=0)
   	      sum++;
   }
   cout<<sum<<endl;
   
}


