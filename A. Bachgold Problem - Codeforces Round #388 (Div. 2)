/*
Problem Link 	: https://codeforces.com/problemset/problem/749/A


Approach 		: Maximum sum can be done by using 2 and 3.if n is even it can be done by 2. else last number will be 3 for odd number. 
*/

#include<bits/stdc++.h>
using namespace std;

 
 
int main() {
  int n;
  cin>>n;
  cout<<n/2<<endl;
  for(int i=0;i<(n/2)-1;i++)
  	 	cout<<"2"<<" ";	
		     
  if(n%2==0) cout<<"2"<<endl;
  else cout<<"3"<<endl;
}
